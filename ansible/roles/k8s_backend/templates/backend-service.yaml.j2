apiVersion: v1
kind: Service
metadata:
  name: {{ service.name | default("backend-svc") }}
  namespace: {{ k8s_namespace | default('devops') }}
  labels:
    app: {{ labels.app | default('backend') }}
spec:
  selector:
    app: {{ labels.app | default('backend') }}
  ports:
    - protocol: TCP
      port: {{ service.port | default(80) }}
      targetPort: {{ service.targetPort | default(5678) }}
      

