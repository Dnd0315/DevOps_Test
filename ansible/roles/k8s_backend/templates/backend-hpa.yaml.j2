apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: backend-hpa
  namespace: {{ k8s_namespace | default('devops') }}
  labels:
    app: {{ labels.app | default('backend') }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: backend-deployment
  minReplicas: {{ hpa.minReplicas | default(3) }}
  maxReplicas: {{ hpa.maxReplicas | default(10) }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{ hpa.targetCPUUtilizationPercentage | default(70) }}
